<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_half"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/kcc_ganpan"
        android:textSize="18sp"
        android:textColor="@color/basic"
        android:text="나이"/>

    <LinearLayout
        android:id="@+id/set_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_age">
        <EditText
            android:id="@+id/set_min_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dialog_edittext"
            android:layout_weight="4.5"
            android:textSize="13sp"
            android:hint="최소나이"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="@font/kcc_ganpan"
            android:textSize="18sp"
            android:textColor="@color/basic"
            android:text="~"/>
        <EditText
            android:id="@+id/set_max_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dialog_edittext"
            android:layout_weight="4.5"
            android:textSize="13sp"
            android:hint="최대나이"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/set_age_by_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/set_age">
        <TextView
            android:id="@+id/one_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_search_tag"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/hakgyoansimwooju"
            android:textSize="12sp"
            android:textColor="@color/basic"
            android:textAlignment="center"
            android:text="1살 미만"/>
        <TextView
            android:id="@+id/three_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_search_tag"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/hakgyoansimwooju"
            android:textSize="12sp"
            android:textColor="@color/basic"
            android:textAlignment="center"
            android:text="1살 ~ 3살"/>
        <TextView
            android:id="@+id/five_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_search_tag"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/hakgyoansimwooju"
            android:textSize="12sp"
            android:textColor="@color/basic"
            android:textAlignment="center"
            android:text="3살 ~ 5살"/>
        <TextView
            android:id="@+id/six_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_search_tag"
            android:fontFamily="@font/hakgyoansimwooju"
            android:textSize="12sp"
            android:textColor="@color/basic"
            android:textAlignment="center"
            android:text="6살 이상"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/set_age_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/set_age_by_tag">
        <TextView
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_white_no_padding"
            android:layout_weight="3"
            android:fontFamily="@font/kcc_ganpan"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@color/basic"
            android:layout_marginRight="10dp"
            android:text="초기화"/>
        <TextView
            android:id="@+id/apply_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_red_no_padding"
            android:layout_weight="7"
            android:fontFamily="@font/kcc_ganpan"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="적용하기"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>